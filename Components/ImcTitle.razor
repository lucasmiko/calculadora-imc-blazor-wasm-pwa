@if (Number < 18.6)
{
    <h4>Abaixo do peso 🔴</h4>
}
else if (Number >= 18.6 && Number <= 24.9)
{
    <h4>Peso ideal ✅</h4>
}
else if (Number >= 25 && Number <= 29.9)
{
    <h4>Sobrepeso ⚠️</h4>
}
else if (Number >= 30)
{
    <h4>Obesidade 🔴</h4>
}

@code {
    [Parameter] [EditorRequired] public double Number { get; set; }
}